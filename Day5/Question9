#include<stdio.h>
#include<math.h>
int main()
{
    float p,r,t,si,ci;
    printf("Enter the principal value: ");
    scanf("%f", &p);
    printf("Enter the rate: ");
    scanf("%f", &r);
    printf("Enter the time: ");
    scanf("%f", &t);
    si=(p*r*t)/100;
    ci=p*pow((1+r/100),t)-p;
    printf("Simple interest= %f", si);
    printf("\nCompound interest= %f", ci);
    return 0;
}
