#include <stdio.h>
#include <math.h>
int main()
{
    int n,num,original,a,x=0;
    double digit=0.0;
    printf("Enter a number: ");
    scanf("%d", &n);
    num=n;
    original=n;
    while(num>0)
    {
        num=num/10;
        x=x+1;
    }
    while(n>0)
    {
        a=n%10;
        n=n/10;
        digit=digit+pow(a,x);
    }
    if(digit==original)
    {
        printf("Armstrong number");
    }
    else
    {
        printf("Not an armstrong number");
    }
    return 0;
}
