#include <stdio.h>
int main() 
{
    int arr[50], n, pos, x, i;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter array elements: ");
    for(i = 0; i < n; i++)
        scanf("%d", &arr[i]);
    printf("Enter position to insert: ");
    scanf("%d", &pos);
    printf("Enter element to insert: ");
    scanf("%d", &x);
    for(i = n; i > pos; i--)
        arr[i] = arr[i - 1];
    arr[pos] = x;
    n++;
    printf("Array after insertion: ");
    for(i = 0; i < n; i++)
        printf("%d ", arr[i]);
    return 0;
}
