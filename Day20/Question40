#include <stdio.h>
int main() 
{
    char ch;
    printf("Enter a binary number: ");
    while ((ch = getchar()) != '\n') 
    {
        if (ch == '0')
            putchar('1');
        else if (ch == '1')
            putchar('0');
        else {
            printf("\nInvalid binary digit!\n");
            return 0;
        }
    }
    return 0;
}
