#include <stdio.h>
int main() 
{
    unsigned int num, mask, started = 0;
    printf("Enter a positive integer: ");
    scanf("%u", &num);
    if (num == 0) 
    {
        printf("Binary representation is: 0\n");
        return 0;
    }
    mask = 1 << 31;
    printf("Binary representation is: ");
    for (; mask > 0; mask >>= 1) 
    {
        if ((num & mask) != 0)
        {
            printf("1");
            started = 1;
        } 
        else if (started) 
        {
            printf("0");
        }
    }
    printf("\n");
    return 0;
}
