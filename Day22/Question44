#include <stdio.h>
int main() 
{
    int n, i;
    float sum = 0.0;
    printf("Enter number of terms: ");
    scanf("%d", &n);
    for (i = 1; i <= n; i++) 
    {
        float numerator = 2 * i - 1;
        float denominator = numerator + 2;  // 1, 4, 6, 8...
        sum += numerator / denominator;
    }
    printf("Approximate sum: %.1f\n", sum);
    return 0;
}
