#include <stdio.h>
int main() 
{
    long num;
    int digit, i;
    int count[10] = {0}; 
    printf("Enter an integer number: ");
    scanf("%ld", &num);
    if (num < 0) 
    {
        num = -num; 
    }
    while (num > 0) 
    {
        digit = num % 10;
        count[digit]++;
        num /= 10;
    }
    int maxCount = count[0];
    int maxDigit = 0;
    for (i = 1; i < 10; i++) 
    {
        if (count[i] > maxCount) 
        {
            maxCount = count[i];
            maxDigit = i;
        }
    }
    printf("The digit that occurs most frequently is: %d\n", maxDigit);
    printf("It occurs %d times.\n", maxCount);
    return 0;
}
