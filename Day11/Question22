#include <stdio.h>
int main()
{
    float cp,sp,profit,loss,profit_per,loss_per;
    printf("Enter the cost price: ");
    scanf("%f", &cp);
    printf("Enter the selling price: ");
    scanf("%f", &sp);
    if(sp>cp)
    {
        profit=sp-cp;
        profit_per=(profit/cp)*100;
        printf("Profit percentage: %.2f\n", profit_per);
    }
    else if(cp>sp)
    {
        loss=cp-sp;
        loss_per=(loss/cp)*100;
        printf("Loss percentage: %.2f\n", loss_per);
    }
    else
    {
        printf("No profit, no loss");
    }
    return 0;
}
